<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/hori_guideline1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.33" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/hori_guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.66" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/vert_guideline1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.33" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/vert_guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.66" />



    <TextView
        android:id="@+id/box_one"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/colorAccent"
        app:layout_constraintBottom_toTopOf="@id/hori_guideline1"
        app:layout_constraintEnd_toStartOf="@id/vert_guideline1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/box_two"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/colorAccent"
        app:layout_constraintBottom_toTopOf="@id/hori_guideline1"
        app:layout_constraintEnd_toStartOf="@id/vert_guideline2"
        app:layout_constraintStart_toEndOf="@id/vert_guideline1"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/box_three"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/colorAccent"
        app:layout_constraintBottom_toTopOf="@id/hori_guideline1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/vert_guideline2"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/box_four"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/colorAccent"
        app:layout_constraintBottom_toTopOf="@id/hori_guideline2"
        app:layout_constraintEnd_toStartOf="@id/vert_guideline1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/hori_guideline1" />

    <TextView
        android:id="@+id/box_five"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/colorAccent"
        app:layout_constraintBottom_toTopOf="@id/hori_guideline2"
        app:layout_constraintEnd_toStartOf="@id/vert_guideline2"
        app:layout_constraintStart_toEndOf="@id/vert_guideline1"
        app:layout_constraintTop_toBottomOf="@id/hori_guideline1" />

    <TextView
        android:id="@+id/box_six"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/colorAccent"
        app:layout_constraintBottom_toTopOf="@id/hori_guideline2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/vert_guideline1"
        app:layout_constraintTop_toBottomOf="@id/hori_guideline1"  />

    <TextView
        android:id="@+id/box_seven"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/colorAccent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/vert_guideline1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/hori_guideline2" />

    <TextView
        android:id="@+id/box_eight"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/colorAccent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/vert_guideline2"
        app:layout_constraintStart_toEndOf="@id/vert_guideline1"
        app:layout_constraintTop_toBottomOf="@id/hori_guideline2" />

    <TextView
        android:id="@+id/box_nine"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/colorAccent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/vert_guideline1"
        app:layout_constraintTop_toBottomOf="@id/hori_guideline2"  />

    <View
        android:layout_width="3dp"
        android:layout_height="match_parent"
        android:background="@color/black"
        app:layout_constraintLeft_toLeftOf="@id/vert_guideline1" />

    <View
        android:layout_width="3dp"
        android:layout_height="match_parent"
        android:background="@color/black"
        app:layout_constraintLeft_toLeftOf="@id/vert_guideline2" />

    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="@color/black"
        app:layout_constraintTop_toTopOf="@id/hori_guideline1" />

    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="@color/black"
        app:layout_constraintTop_toTopOf="@id/hori_guideline2" />
</androidx.constraintlayout.widget.ConstraintLayout>