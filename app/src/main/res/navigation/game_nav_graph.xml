<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/game_nav_graph"
    app:startDestination="@id/splashFragment">

    <fragment
        android:id="@+id/splashFragment"
        android:name="com.itamecodes.vivek.tictactoe.SplashScreenFragment"
        tools:layout="@layout/splash_fragment"
        android:label="HomeScreen" >
        <action
            android:id="@+id/action_splashFragment_to_gameFragment"
            app:destination="@id/gameFragment" />
        <action
            android:id="@+id/action_splashFragment_to_scoreFragment"
            app:destination="@id/scoreFragment" />
        <action
            android:id="@+id/action_splashFragment_to_settingsFragment"
            app:destination="@id/settings_fragment" />
    </fragment>
    <fragment
        android:id="@+id/gameFragment"
        tools:layout="@layout/game_fragment"
        android:name="com.itamecodes.vivek.tictactoe.GameFragment"
        android:label="GameFragment" >
        <argument
            android:name="score"
            app:argType="integer"
            android:defaultValue="1" />
        <argument
            android:name="life"
            android:defaultValue="2" />
        <argument
            android:name="jingle"
            app:argType="string"
            android:defaultValue="vivek" />
    </fragment>
    <fragment
        android:id="@+id/scoreFragment"
        android:name="com.itamecodes.vivek.tictactoe.ScoreFragment"
        tools:layout="@layout/score_fragment"
        android:label="ScoreFragment" >
        <action
            android:id="@+id/action_scoreFragment_to_splashFragment"
            app:destination="@id/splashFragment"
            app:popUpTo="@+id/splashFragment"
            app:popUpToInclusive="true"
             />
    </fragment>
    <fragment
        android:id="@+id/settings_fragment"
        android:name="com.itamecodes.vivek.tictactoe.SettingsFragment"
        tools:layout="@layout/settings_fragment"
        android:label="SettingsFragment" />
</navigation>